<% content_for :title, "All Cancelled Orders" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Cancelled Orders Data</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Delivery Date</th>
                <th>Product</th>
                <th>Payment Option</th>
                <th>Amount</th>
                <th>Status</th>
                <th>District</th>
                <th width="101px">Buttons</th>
              </tr>
            </thead>

            <tbody>

            <% @orders.each do |order| %>

              <tr class="">
                <td><%= order.name %></td>
                <td><%= order.phone %></td>
                <td><%= order.address %></td>
                <td><%= order.delivery_date %></td>
                <td><%= order.product_id %></td>
                <td><%= order.payment_option %></td>
                <td><%= order.amount %></td>
                <td><span class="badge badge-primary"> <%= order.order_status %></span></td>
                <td><%= order.district %></td>
                <td>
                  <%= link_to order_path(order.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_order_path(order.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to order_path(order.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-print" aria-hidden="true"></i>
                  <% end %>
                  <span class="btn btn-white btn-bitbucket" data-toggle="modal" data-target="#myModal" ><span class="fa fa-eye"></span></span>

                  <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title">Order Details</h4>
                        </div>
                        <div class="modal-body">
                          <p>Name: <b><%= order.name %></b></p>
                          <p>Phone: <b><%= order.phone %></b></p>
                          <p>Address: <b><%= order.phone %></b></p>
                          <p>Delivery Date: <b><%= order.delivery_date %></b></p>
                          <p>Product Id: <b><%= order.product_id %></b></p>
                          <p>Payment Option: <b><%= order.payment_option %></b></p>
                          <p>Amount: <b><%= order.amount %></b></p>
                          <p>Description: <b><%= order.description %></b></p>
                          <p>Address: <b><%= order.address %></b></p>
                          <p>District: <b><%= order.district %></b></p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>

                    </div>
                  </div>

                </td>
              </tr>

            <% end %>

            </tbody>

            <tfoot>
              <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Delivery Date</th>
                <th>Product</th>
                <th>Payment Option</th>
                <th>Amount</th>
                <th>Status</th>
                <th>District</th>
                <th>Buttons</th>
              </tr>
            </tfoot>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>